<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body>
    <section class="vh-100">
        <div>
            {{#if user}}
            <p class="text-success" style="float:left;padding-left: 30px;padding-top: 30px; font-size: large;">
                {{#if user.isManager}}
                Manager
                {{else}}
                Developer
                {{/if}}
                Dashboard</p>
            {{/if}}
            <img style="border-radius: 50%;width: 6em; height: 5em;" src="/{{user._id}}.jpg" style="height: 10rem;">
            <a href="/logout" style="float:right;padding-right: 30px;margin-top: 30px; font-size: large;">logout</a>
        </div>
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <h1>Hi {{user.name}} HaVe A NiCe DaY </h1>
                </div>
            </div>
        </div>
    </section>
</body>

</html>